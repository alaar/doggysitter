<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <img src="https://phoenix.dentaldstudio.com/wp-content/uploads/2015/07/appointment-512.png" class="img-rounded img-responsive" alt="appointment" style= "width: 250px;">

      <h4>You have a request from <%= @appointment.user.email %></h4>
      <h4>For your offer:</h4>
      <h5> <strong>Date:</strong> <%= @offer.date_time %> </h5>
      <h5> <strong>Location:</strong> <%= @offer.location %> </h5>
      <h5> <strong>Price:</strong> <%= @offer.price %> </h5>
      <h5> <strong>Status:</strong> <%= @appointment.status %> </h5>

      <% if @offer.user == current_user && @appointment.status == "pending" %>
        <%= simple_form_for @appointment do |f| %>
          <%= f.submit "approve", class: "btn btn-success" %>
          <%= f.submit "decline", class: "btn btn-danger" %>
        <% end %>
      <% end %>
      <br>

    </div>
  </div>
</div>
