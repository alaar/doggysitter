<%= if @offer.error.any? %>
<h2>The following errers prevented the article from getting created</h2>
<ul>
  <% @article.errors.full_mesages.each do |msg| %>
    <li><%= msg %></li>
    <%= end %>
</ul>
<% end %>

<%= form_for(@offer) do |f| %>
  <%= f.label :price %>
  <%= f.text_field :price%>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.label :date_and_time %>
  <%= f.text_field :date_time %>
  <br>
  <%= f.submit "Create an offer", class: "btn btn-primary" %>
<% end %>
