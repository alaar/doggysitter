
<%= form_for(@offer) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :date_and_time %>
  <%= f.text_field :date_time %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price%>
  <br>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <br>
  <%= f.submit "Create an offer", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Offers", offers_path %>

