<h1 class = "sitter" style="text-align:center;">Current Offers</h1>
<div class="container">

  <!-- <div id="flat_address">
      <input id="autocomplete" placeholder="Enter your address"
             onFocus="geolocate()" type="text"></input>
  </div> -->
  <div class = "map">
    <div
      id="map"
      style="width: 100%;
      height: 200px;"
      data-markers="<%= @markers.to_json %>"
    ></div>
  </div>



  <div class="row ">

    <% @offers.each do |offer| %>
      <div class="card-container col-xs-12 col-sm-6 col-md-4">
        <%= link_to offer_path(offer) do %>
          <% image_url_path = image_path "#{rand(1..14)}.jpg" %>
          <div class = "card" style="background-image: url('<%= cl_image_path(offer.photo) rescue nil %>')">
            <!-- use offer.photo? -->
            <!--   <%= link_to offer.location, offer %> -->
            <!-- ui-component in wagon -->
            <!-- http://lewagon.github.io/ui-components/#cards -->
            <div class="card-content">
              <div class="city"><%= offer.location.split(",")[0] %></div>
              <div class="ico"><i class="fa fa-heart"></i></div>
              <div class="price"> $<%= offer.price %>/per hour<br><%= offer.date_time %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="btn btn-primary cas"> <%= link_to "Create an Offer", new_offer_path %> </div>
</div>


